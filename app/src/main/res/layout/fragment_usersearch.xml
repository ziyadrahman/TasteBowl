<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_height="match_parent"
    tools:context=".User.Usersearch">

    <!-- TODO: Update blank fragment layout -->
    <SearchView
        android:id="@+id/user_search_search"
        android:layout_width="match_parent"
        android:queryHint="Search Here"
        android:background="@color/lightred"
        android:focusedByDefault="true"
        android:layout_height="wrap_content"></SearchView>
    <ListView
        android:id="@+id/user_search_enlish_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/transparent"
        android:dividerHeight="3dp"></ListView>
    <ListView
        android:id="@+id/user_search_recipie_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/transparent"
        android:dividerHeight="3dp"></ListView>



</LinearLayout>